<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="table.Author" table="author">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"></generator>
        </id>

        <property name="firstName" column="first_name" type="java.lang.String" lazy="false"/>
        <property name="lastName" column="last_name" type="java.lang.String" lazy="false"/>
        <property name="middleName" column="middle_name" type="java.lang.String" lazy="false"/>
    </class>
</hibernate-mapping>