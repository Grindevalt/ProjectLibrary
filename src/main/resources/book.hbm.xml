<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="table.Book" table="book">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"></generator>
        </id>

        <property name="isbn" column="isbn" type="java.lang.Integer" lazy="false"/>
        <property name="title" column="title" type="java.lang.String"   lazy="false"/>
        <property name="description" column="description" type="java.lang.String" lazy="false"/>

    </class>

</hibernate-mapping>